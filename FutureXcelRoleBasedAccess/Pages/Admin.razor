@page "/admin"
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="admin-container">
    <div class="admin-header">
        <div class="header-content">
            <div>
                <h1>⚡ Admin Panel</h1>
                <p>Manage users and access control</p>
            </div>
            <div class="header-actions">
                <span class="username">👤 @currentUsername</span>
                <button class="btn-logout" @onclick="Logout">Logout</button>
            </div>
        </div>
    </div>

    <div class="admin-content">
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">👥</div>
                <div class="stat-info">
                    <h3>@users.Count</h3>
                    <p>Total Users</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">🛡️</div>
                <div class="stat-info">
                    <h3>@users.Count(u => u.Role == "Admin")</h3>
                    <p>Admins</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon">✅</div>
                <div class="stat-info">
                    <h3>@users.Count(u => u.IsActive)</h3>
                    <p>Active Users</p>
                </div>
            </div>
        </div>

        <div class="users-section">
            <h2>User Management</h2>

            @if (isLoading)
            {
                <div class="loading">Loading users...</div>
            }
            else if (users.Count == 0)
            {
                <div class="no-data">No users found</div>
            }
            else
            {
                <div class="table-container">
                    <table class="users-table">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                                <tr>
                                    <td>
                                        <div class="user-cell">
                                            <span class="user-avatar">@user.Username[0].ToString().ToUpper()</span>
                                            <span>@user.Username</span>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge badge-@user.Role.ToLower()">@user.Role</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-@(user.IsActive ? "active" : "inactive")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            @if (user.Role != "Admin")
                                            {
                                                <button class="btn-action btn-toggle" @onclick="() => ToggleUserStatus(user.Id)">
                                                    @(user.IsActive ? "🔒 Deactivate" : "🔓 Activate")
                                                </button>
                                                <button class="btn-action btn-delete" @onclick="() => DeleteUser(user.Id)">
                                                    🗑️ Delete
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="protected">Protected</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <div class="footer">Built by Fayaz</div>
</div>

